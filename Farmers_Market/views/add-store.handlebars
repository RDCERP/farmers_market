<!-- ADD STORE Title -->
<section class="store-light-green-container">
    <div id="store-dark-green-container">
        <div id="stores-title-container">
            <h2 id="stores-title">Add Store</h2>
        </div>
    </div>
</section>


<!-- CREATE A STORE SECTION -->
<section class="large-light-green-container">
    <!-- Form Start -->
    <div class="container">
        <form class="form-to-add" id="add-store-form">
            <div class="form-group">
                <label for="store_name">WHAT IS THE NAME OF YOUR STORE?</label>
                <input type="text" class="form-control" id="store_name" name="store_name" placeholder="Store Name">
            </div>
            <div class="form-group">
                <label for="store_categories">SELECT ONE OR MORE CATEGORIES</label>
                <select multiple class="form-control" id="store_categories" name="store_categories">
                    {{#each categories as |category|}}
                    <option value="{{id}}">{{category_name}}</option>
                    {{/each}}  
                </select>
            </div>
            <div class="form-group">
                <label for="store_description">STORE DESCRIPTION</label>
                <textarea class="form-control" id="store_description" name="store_description" rows="3"></textarea>
            </div>
            <button type="submit" class="mb-2">Confirm</button>
        </form>
    </div>
</section>

<script src="/javascript/create-store.js"></script>