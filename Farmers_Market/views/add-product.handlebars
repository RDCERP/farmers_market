<!-- ADD PRODUCT Title -->
<section class="store-light-green-container">
    <div id="store-dark-green-container">
        <div id="stores-title-container">
            <h2 id="stores-title">Add Product</h2>
        </div>
    </div>
</section>


<!-- CREATE A PRODUCT SECTION -->
<section class="large-light-green-container">
    <!-- Form Start -->
    <div class="container">
        <form class="form-to-add" id="add-product-form">
            <div class="form-group">
                <label for="product_name">WHAT IS THE NAME OF YOUR PRODUCT</label>
                <input type="text" class="form-control" id="product_name" name="product-name" placeholder="Product Name">
            </div>
            <div class="form-group">
                <label for="store-for-product">SELECT THE STORE FOR YOUR PRODUCT</label>
                <select class="form-control" id="store-for-product" name="store-for-product">
                    {{#each stores as |store|}}
                    <option value="{{id}}">{{store_name}}</option>
                    {{/each}}  
                </select>
            </div>
            <div class="form-group">
                <label for="product_description">PRODUCT DESCRIPTION</label>
                <textarea class="form-control" id="product_description" name="product-description" rows="3"></textarea>
            </div>
            <button type="submit" class="mb-2">Confirm</button>
        </form>
    </div>
</section>

<script src="/javascript/create-product.js"></script>